<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:paddingHorizontal="20dp"
    android:paddingVertical="8dp">

    <TextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/date"
        style="@style/date"/>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/block_parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/round_bg_currency"
        android:paddingHorizontal="12dp"
        android:paddingVertical="8dp"
        android:layout_marginHorizontal="6dp"
        android:layout_marginBottom="2dp"
        android:layout_marginTop="6dp">

        <TextView
            android:id="@+id/currency_parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/currency"
            style="@style/currency"/>

        <TextView
            android:id="@+id/currency_parent_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/currency_value"
            style="@style/currency"
            android:layout_marginHorizontal="24dp"/>

    </androidx.appcompat.widget.LinearLayoutCompat>

    <ImageView
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:src="@drawable/ic_exchange"/>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/block_child"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/round_bg_currency"
        android:paddingHorizontal="12dp"
        android:paddingVertical="8dp"
        android:layout_marginHorizontal="6dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="20dp">

        <TextView
            android:id="@+id/currency_child"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/currency"
            style="@style/currency"/>

        <TextView
            android:id="@+id/currency_child_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/currency_value"
            style="@style/currency"
            android:layout_marginHorizontal="24dp"/>

    </androidx.appcompat.widget.LinearLayoutCompat>



</androidx.appcompat.widget.LinearLayoutCompat>